= render 'toppage/header'
= render "toppage/button"
= render "user_pankz"


.user-main
  .myside
    %nav.myside--top
      = link_to user_path(current_user.id), class: "myside--top__list" do
        %span マイページ
        %i.fas.fa-chevron-right
      = link_to notification_user_path(current_user.id), class: "myside--top__list" do
        %span お知らせ
        %i.fas.fa-chevron-right
      = link_to todo_user_path(current_user.id), class: "myside--top__list" do
        %span やることリスト
        %i.fas.fa-chevron-right
      = link_to likes_user_path(current_user.id), class: "myside--top__list" do
        %span いいね！一覧
        %i.fas.fa-chevron-right
      = link_to new_good_path, class: 'myside--top__list' do
        %span 出品する
        %i.fas.fa-chevron-right
      = link_to items_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 出品中
        %i.fas.fa-chevron-right
      = link_to dealing_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 取引中
        %i.fas.fa-chevron-right
      = link_to sold_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 売却済み
        %i.fas.fa-chevron-right
      = link_to buying_user_path(current_user.id), class: "myside--top__list" do
        %span 購入した商品 取引中
        %i.fas.fa-chevron-right
      = link_to bought_user_path(current_user.id), class: "myside--top__list" do
        %span 購入した商品 過去の取引
        %i.fas.fa-chevron-right
      = link_to news_user_path(current_user.id), class: "myside--top__list" do
        %span ニュース一覧
        %i.fas.fa-chevron-right
      = link_to guide_user_path(current_user.id), class: "myside--top__list" do
        %span ガイド
        %i.fas.fa-chevron-right
      = link_to contact_user_path(current_user.id), class: "myside--top__list" do
        %span お問い合わせ
        %i.fas.fa-chevron-right
    %h3.myside--while
      メルペイ
      %li.myside--while__list
        %span 売り上げ・振込申請
        %i.fas.fa-chevron-right
      %li.myside--while__list
        %span ポイント申請
        %i.fas.fa-chevron-right
    %h3.myside--under
      設定
      = link_to profile_user_path(current_user.id), class: "myside--under__list" do
        %span プロフィール
        %i.fas.fa-chevron-right
      = link_to address_edit_user_path(current_user.id), class: "myside--under__list" do
        %span 発送元・お届け先住所変更
        %i.fas.fa-chevron-right
      = link_to payment_user_path(current_user.id), class: "myside--under__list" do
        %span 支払い方法
        %i.fas.fa-chevron-right
      = link_to email_user_path(current_user.id), class: "myside--under__list" do
        %span メール/パスワード
        %i.fas.fa-chevron-right
      = link_to identification_user_path(current_user.id), class: "myside--under__list__active" do
        %span 本人情報
        %i.fas.fa-chevron-right
      = link_to phone_user_path(current_user.id), class: "myside--under__list" do
        %span 電話番号の確認
        %i.fas.fa-chevron-right
      = link_to logout_user_path(current_user.id), class: "myside--under__list" do
        %span ログアウト
        %i.fas.fa-chevron-right
  .user-main__box
    .user-main__head
      本人情報の登録
    = form_for @user do |f|
      .user--info
        .user--info__top
          %p
            お客さまの本人情報をご登録ください。
            %br
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          .user--info__top__right
            本人確認書類のアップロードについて >
        .user--info__name
          .user--info__name__display
            %h
              お名前
          .user--info__name__display__full
          = @user.family_name
          = @user.first_name
        .user--info__kana
          .user--info__kana__display
            %h
              お名前カナ
          .user--info__kana__display__full
          = @user.family_kana
          = @user.first_kana
        .user--info__birthday
          .user--info__birthday__display
            %h
              生年月日
          .user--info__birthday__display__full
          = @user.birthday_year 
          = @user.birthday_month 
          = @user.birthday_date 
        .user--info__post
          %li 郵便番号
          %ul 任意
          %input{:name => "zip-code", :placeholder => "例)1234567", :type => "text", :value => ""}/        
        .user--info__prefectures
          %li 都道府県
          %ul 任意
          %input{:name => "zip-code", :placeholder => "--", :type => "text", :value => ""}/        
        .user--info__city
          %li 市区町村
          %ul 任意
          %input{:name => "zip-code", :placeholder => "例)横浜市縁区", :type => "text", :value => ""}/        
        .user--info__address
          %li 番地
          %ul 任意
          %input{:name => "zip-code", :placeholder => "例)青山1-1-1", :type => "text", :value => ""}/        
        .user--info__bill
          %li 建物名
          %ul 任意
          %input{:name => "zip-code", :placeholder => "例)柳ビル103", :type => "text", :value => ""}/        
        .user--info__btn
          登録する
        .user--info__footer
          %p
            本人情報の登録について >
  
= render 'toppage/footer'