= render 'toppage/header.html.haml'
= render "toppage/button.html.haml"
= render "user_pankz"
.mypage
  .mymain
    .mymain--user
      .mymain--user__img
        .mymain--user__img__block
          .mymain--user__img__block__face
            %img{:src => "//static.mercdn.net/images/member_photo_noimage_thumb.png", :width => "60"}
          
          .mymain--user__img__name
            = @user.nick_name
          .mymain--user__img__name__text
            %div
              評価者
              %span
                0
            %div
              出品数
              %span
                0
    - if params[:id] == current_user.id
      .mymain--user__todo
        %ul.mymain--user__todo
          %li.mymain--user__todo__active
            お知らせ
          %li.mymain--user__todo__do
            やることリスト
          .mymain--user__todo__list
          .mymain--user__todo__btn
            %a
              一覧を見る
    - else
  - if params[:id] == current_user.id
    .mymain--purchase
      %h4.mymain--purchase__head
        購入した商品
      %ul.mymain--purchase__situation
        %li.active
          %h5
            取引中
        %li
          %h5
            過去の取引
      .mymain--purchase--under
        %ul.mymain--purchase--under
          %li.mymain--purchase--under--box
            取引中の商品がありません
  - else
  = render 'side.html.haml'
= render 'toppage/footer.html.haml'
