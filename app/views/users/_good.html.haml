- if good.buy.present?
  = link_to selledit_good_path(good.id) do
    .top_ca__ca_block__box__small_box
      .top_ca__ca_block__box__small_box__image
        = image_tag asset_path("redtriangle.png"), size: "80x80", class: "sold-box"
        =image_tag good.images[0].image, size: "188x188", alt: "text", class: "img-box"
        .top_ca__ca_block__box__small_box__price
          %span
            ¥
          = good.price.to_s(:delimited)
      .top_ca__ca_block__box__small_box__message
        = good.name
- else
  = link_to selledit_good_path(good.id) do
    .top_ca__ca_block__box__small_box
      .top_ca__ca_block__box__small_box__image
        =image_tag good.images[0].image, size: "188x188", alt: "text", class: "img-box"
        .top_ca__ca_block__box__small_box__price
          %span
            ¥
          = good.price.to_s(:delimited)
      .top_ca__ca_block__box__small_box__message
        = good.name
  