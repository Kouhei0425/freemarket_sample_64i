.user-main
  .myside
    %nav.myside--top
      = link_to user_path(current_user.id), class: "myside--top__list" do
        %span マイページ
        %i.fas.fa-chevron-right
      = link_to notification_user_path(current_user.id), class: "myside--top__list" do
        %span お知らせ
        %i.fas.fa-chevron-right
      = link_to todo_user_path(current_user.id), class: "myside--top__list" do
        %span やることリスト
        %i.fas.fa-chevron-right
      = link_to likes_user_path(current_user.id), class: "myside--top__list" do
        %span いいね！一覧
        %i.fas.fa-chevron-right
      = link_to new_good_path, class: 'myside--top__list' do
        %span 出品する
        %i.fas.fa-chevron-right
      = link_to items_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 出品中
        %i.fas.fa-chevron-right
      = link_to dealing_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 取引中
        %i.fas.fa-chevron-right
      = link_to sold_user_path(current_user.id), class: "myside--top__list" do
        %span 出品した商品 売却済み
        %i.fas.fa-chevron-right
      = link_to buying_user_path(current_user.id), class: "myside--top__list" do
        %span 購入した商品 取引中
        %i.fas.fa-chevron-right
      = link_to bought_user_path(current_user.id), class: "myside--top__list" do
        %span 購入した商品 過去の取引
        %i.fas.fa-chevron-right
      = link_to news_user_path(current_user.id), class: "myside--top__list" do
        %span ニュース一覧
        %i.fas.fa-chevron-right
      = link_to guide_user_path(current_user.id), class: "myside--top__list" do
        %span ガイド
        %i.fas.fa-chevron-right
      = link_to contact_user_path(current_user.id), class: "myside--top__list" do
        %span お問い合わせ
        %i.fas.fa-chevron-right
    %h3.myside--while
      メルペイ
      %li.myside--while__list
        %span 売り上げ・振込申請
        %i.fas.fa-chevron-right
      %li.myside--while__list
        %span ポイント申請
        %i.fas.fa-chevron-right
    %h3.myside--under
      設定
      = link_to profile_user_path(current_user.id), class: "myside--under__list" do
        %span プロフィール
        %i.fas.fa-chevron-right
      = link_to address_edit_user_path(current_user.id), class: "myside--under__list__active" do
        %span 発送元・お届け先住所変更
        %i.fas.fa-chevron-right
      = link_to payment_user_path(current_user.id), class: "myside--under__list" do
        %span 支払い方法
        %i.fas.fa-chevron-right
      = link_to email_user_path(current_user.id), class: "myside--under__list" do
        %span メール/パスワード
        %i.fas.fa-chevron-right
      = link_to identification_user_path(current_user.id), class: "myside--under__list" do
        %span 本人情報
        %i.fas.fa-chevron-right
      = link_to phone_user_path(current_user.id), class: "myside--under__list" do
        %span 電話番号の確認
        %i.fas.fa-chevron-right
      = link_to logout_user_path(current_user.id), class: "myside--under__list" do
        %span ログアウト
        %i.fas.fa-chevron-right
  .address__content
    .address__content__head
      %h2.address__content__head__text 発送元・お届け先住所変更
    .address__content__form
      = form_for @address, url: address_update_user_path, method: :patch do |f|
        .form-group
          %label お名前
          %span.form-require 必須
          %br
          = f.text_field :family_name, placeholder:"例) 山田",class:"input-default"
          %br
          = f.text_field :first_name, placeholder:"例) 彩",class:"input-default"
        .form-group
          %label お名前カナ
          %span.form-require 必須
          = f.text_field :family_kana, placeholder:"例) ヤマダ",class:"input-default"
          = f.text_field :first_kana, placeholder:"例) アヤ",class:"input-default"
        .form-group
          %label 郵便番号
          %span.form-require 必須
          %br
          = f.text_field :post, placeholder:"例) 123-4567",class:"input-default"
        .form-group
          %label 都道府県
          %span.form-require 必須
          %br
        .select-prefecture
          %i.icon-arrow-bottom
            = f.collection_select :prefecture, Area.all, :name, :name
        .form-group
          %label 市区町村
          %span.form-require 必須
          %br
          = f.text_field :city, placeholder:"例) 横浜市緑区",class:"input-default"
        .form-group
          %label 番地
          %span.form-require 必須
          %br
          = f.text_field :address, placeholder:"例) 青山1−1−1",class:"input-default"
        .form-group
          %label 建物名
          %span.form-arbitrary 任意
          = f.text_field :buil, placeholder:"例) 柳ビル103",class:"input-default"
        .form-group
          %label 電話
          %span.form-arbitrary 任意
          = f.text_field :phone_number, placeholder:"例) 09012345678",class:"input-default"
        = f.submit "変更する", class: "btn-red"


= render 'toppage/footer'