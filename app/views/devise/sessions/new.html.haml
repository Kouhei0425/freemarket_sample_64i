.single_header
  %h1.single_header__link
    = link_to root_path do
      = image_tag "fmarket_logo_red.svg", size: "185x49", alt: "Mercari", class: "logo-img"

.login-box
  .login-main
    .login-main__signup
      %p アカウントをお持ちでない方はこちら
      = link_to step1_signup_index_path do
        .signup-btn
          新規会員登録
    .login-main__sns
      = link_to "http://localhost:3000/users/auth/facebook" do
        %i.facebook-btn
          = image_tag asset_path("facebook-logo.png"), size: "26x26", alt: "Facebook", class: "facebook-logo"
          .facebook-btn__text
            %p Facebookでログイン
      = link_to "http://localhost:3000/users/auth/google_oauth2" do
        %i.google-btn
          = image_tag asset_path("google-logo.png"), size: "22x22", alt: "Google", class: "google-logo"
          .google-btn__text
            %p Googleでログイン
    .login-main__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .email-field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .password-field
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        .actions
          = image_tag "norobot.png", size: "300x74", alt: "Norobot", class: "norobot"
          = f.submit "ログイン", class: "login-btn"
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to new_password_path(resource_name) do
              %p パスワードをお忘れの方
.footer-signin
  .footer-text
    %ul
      %li 
        = link_to "https://www.mercari.com/jp/privacy/" do
          %p プライバシーポリシー
      %li 
        = link_to "https://www.mercari.com/jp/tos/" do
          %p フリマ利用規約
      %li 
        = link_to "https://www.mercari.com/jp/tokutei/" do
          %p 特定商取引に関する規約
  .footer-logo
    = image_tag "trollface.png", size: "60x60", alt: "Fmarket", class: "logo-img"
  .footer-lnc
    ©︎Fmarket,lnc.
-# = render "devise/shared/links"