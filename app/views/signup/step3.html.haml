.address-box
  .address-box__container
    .address-box__container__text
      住所入力
    = form_for @address, url: step4_signup_index_path, method: :get, html: {class: 'third-main__box'} do |f|
      .user-new__main__form__content__text
        %h お名前
        .red2 必須
      = f.text_field :family_name, placeholder:"例）山田"
      = f.text_field :first_name, placeholder:"例）彩"
      .user-new__main__form__content__text
        %h お名前カナ
        .red2 必須
      = f.text_field :family_kana, placeholder:"例）ヤマダ"
      = f.text_field :first_kana, placeholder:"例）アヤ"
      .user-new__main__form__content__text
        %h 郵便番号
        .red2 必須
      = f.text_field :post, placeholder:"例）123-4567"
      .user-new__main__form__content__text
        %h 都道府県
        .red2 必須
      = f.collection_select :prefecture, Area.all,:id,:name,{prompt:'---'}
      .user-new__main__form__content__text
        %h 市区町村
        .red2 必須
      = f.text_field :city, placeholder:"例）横浜市緑区"
      .user-new__main__form__content__text
        %h 番地
        .red2 必須
      = f.text_field :address, placeholder:"例）青山1-1-1"
      .user-new__main__form__content__text
        %h 建物名
        .gray2 任意
      = f.text_field :buil, placeholder: "例）柳ビル103"
      .user-new__main__form__content__text
        %h 電話
        .gray2 任意
      = f.text_field :phone_number, placeholder: "例) 09012345678"
      = f.submit "次へ進む",class:"address-next"
