%header
  .header-inner
    .header-top
      = link_to root_path, class: 'logo' do
        = image_tag "fmarket_logo_red.svg", size: "134x34", alt: "Mercari", class: "logo-img"
      .form
        %form
          %input{placeholder: "何かお探しですか？", class: "text-field", type: "text", size: "100x1"}/
          %button.icon-btn
            %svg.icon-search{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 16 16", :width => "16"}
              %path{d: "M11.435 10.063h-.723l-.256-.247a5.92 5.92 0 0 0 1.437-3.87 5.946 5.946 0 1 0-5.947 5.947 5.92 5.92 0 0 0 3.87-1.437l.247.256v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0A4.111 4.111 0 0 1 1.83 5.946 4.111 4.111 0 0 1 5.946 1.83a4.111 4.111 0 0 1 4.117 4.116 4.111 4.111 0 0 1-4.117 4.117z", fill: "currentColor", "fill-rule": "nonzero"}
    .header-nav
      .header-nav-box
        .header-cat-nav
          .header-cat-nav-category
            .header-cat-nav-category--1
              = link_to "レディース", category_path(1), class: "header-cat-nav-category--1--li", value: 1
              = link_to "メンズ", category_path(2), class: "header-cat-nav-category--1--li", value: 2
              = link_to "ベビー・キッズ", category_path(3), class: "header-cat-nav-category--1--li", value: 3
              = link_to "インテリア・住まい・小物", category_path(4), class: "header-cat-nav-category--1--li", value: 4
              = link_to "本・音楽・ゲーム", category_path(5), class: "header-cat-nav-category--1--li", value: 5
              = link_to "おもちゃ・ホビー・グッズ", category_path(6), class: "header-cat-nav-category--1--li", value: 6
              = link_to "コスメ・香水・美容", category_path(7), class: "header-cat-nav-category--1--li", value: 7
              = link_to "家電・スマホ・カメラ", category_path(8), class: "header-cat-nav-category--1--li", value: 8
              = link_to "スポーツ・レジャー", category_path(9), class: "header-cat-nav-category--1--li", value: 9
              = link_to "ハンドメイド", category_path(10), class: "header-cat-nav-category--1--li", value: 10
              = link_to "チケット", category_path(11), class: "header-cat-nav-category--1--li", value: 11
              = link_to "自動車・オートバイ", category_path(12), class: "header-cat-nav-category--1--li", value: 12
              = link_to "その他", category_path(13), class: "header-cat-nav-category--1--li", value: 13
            .header-cat-nav-category--2
            .header-cat-nav-category--3
          %i.header-nav-cat
            = link_to category_path(1), class: 'nav-cat' do
              %svg.icon-cat{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 20 16", :width => "20"}
                %path{:d => "M18.799 15.25h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zM2 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z", fill: "currentColor", "fill-rule": "nonzero"}
              %span カテゴリーから探す
          %i.header-nav-brand
            = link_to brand_path(1), class: 'nav-brand' do
              %svg.icon-brand{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 23 16", :width => "23"}
                %path{:d => "M6.315 0L4.473 1.806 2.833.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z", fill: "currentColor", "fill-rule": "nonzero"}
              %span ブランドから探す
        .header-login-nav
          -if user_signed_in?
            .header-login-nav__lists
              = link_to likes_user_path(current_user.id), class: "header-login-nav__lists__likes" do
                %i.far.fa-heart
                %span いいね！一覧
              = link_to notification_user_path(current_user.id), class: "header-login-nav__lists__note" do
                %i.far.fa-bell
                %span お知らせ
              = link_to todo_user_path(current_user.id), class: "header-login-nav__lists__todo" do
                %i.fas.fa-check
                %span やることリスト
              = link_to user_path(current_user.id), class:"header-login-nav__lists__mypage" do
                %img{:alt => "", :src => "//static.mercdn.net/images/member_photo_noimage_thumb.png", :width => "32"}/
                %span マイページ
          -else
            = link_to "新規会員登録", step1_signup_index_path, class: 'btn-red'
            = link_to "ログイン", new_user_session_path, class: 'header-login'
         